                            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#000"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </Border>
                <Border x:Name="btnLowerDeck" Background="#005738" Width="835" Height="50" BorderThickness="5" BorderBrush="#05fb3b"

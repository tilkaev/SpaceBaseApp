        <Border BorderBrush="#05fb3b" Grid.Row="2" BorderThickness="0 0 0 5"></Border>

        <StackPanel Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Border x:Name="btnCancel" Width="200" Height="40"
                BorderBrush="#05fb3b" BorderThickness="5" Margin="0 0 0 0" MouseDown="btnCancel_MouseDown"
                MouseEnter="btnCancel_MouseEnter" MouseLeave="btnCancel_MouseLeave">
                <TextBlock Text="Cancel" FontSize="24" TextAlignment="Center" Foreground="#05fb3b" FontFamily="/Fonts/#Handjet Square Double Medium" VerticalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#000"/>
                    </TextBlock.Effect>
                </TextBlock>

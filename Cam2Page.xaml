<Page x:Class="SpaceBaseApp.Cam2Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpaceBaseApp"
      mc:Ignorable="d" 
      d:DesignHeight="330" d:DesignWidth="630"
      Title="Cam2Page">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border Background="#005738" BorderThickness="5" BorderBrush="#05fb3b"
                        Width="630" Height="50">
            <TextBlock Text="Cam 2 Rest room" TextAlignment="Center" FontSize="24" Foreground="#05fb3b" FontFamily="./Fonts/#Handjet Square Double Medium" VerticalAlignment="Center" Margin="10 0 0 0">
                <TextBlock.Effect>
                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="#000"/>
                </TextBlock.Effect>
            </TextBlock>
        </Border>
        <Image Grid.Row="1" Source="Images/Cam2.jpg" Stretch="Fill"></Image>
    </Grid>
</Page>
